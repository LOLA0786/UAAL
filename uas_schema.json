{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Universal Action Schema (UAS)",
  "type": "object",
  "required": [
    "action_id",
    "actor",
    "verb",
    "object",
    "timestamp",
    "metadata"
  ],
  "properties": {
    "action_id": {
      "type": "string"
    },
    "actor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "verb": {
      "type": "string"
    },
    "object": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "attributes": {
          "type": "object"
        }
      },
      "required": [
        "type"
      ]
    },
    "parameters": {
      "type": "object"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "confidence": {
      "type": "number"
    },
    "reasoning": {
      "type": "string"
    },
    "policy_evaluation": {
      "type": "object"
    },
    "metadata": {
      "type": "object"
    }
  }
}